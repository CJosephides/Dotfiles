! XFT Font
URxvt.font: xft:DejaVu Sans Mono:style=Book:pixelsize=14
URxvt.boldFont: xft:DejaVu Sans Mono:style=Bold:pixelsize=14
URxvt.italicFont: xft:DejaVu Sans Mono:style=Oblique:pixelsize=14
URxvt.boldItalicfont: xft:DejaVu Sans Mono:style=BoldOblique:pixelsize=14

! Layout and display
URxvt.letterSpace: -2
URxvt.lineSpace: 0
URxvt.geometry: 80x27
URxvt.internalBorder: 4
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveLines: 32767
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false

! Xft settings
Xft.autohint:   false
Xft.lcdfilter:  lcddefault
Xft.dpi:        108
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintsfull


!---------------------------------------------------------------------------
! Selenized light color palette for urxvt and X Window System
!
#define    bg_0        #fbf3db
#define    bg_1        #e9e4d0
#define    bg_2        #cfcebe
#define    dim_0       #909995
#define    fg_0        #53676d
#define    fg_1        #3a4d53

#define    red         #d2212d
#define    green       #489100
#define    yellow      #ad8900
#define    blue        #0072d4
#define    magenta     #ca4898
#define    cyan        #009c8f
#define    orange      #c25d1e
#define    violet      #8762c6

#define    br_red      #cc1729
#define    br_green    #428b00
#define    br_yellow   #a78300
#define    br_blue     #006dce
#define    br_magenta  #c44392
#define    br_cyan     #00978a
#define    br_orange   #bc5819
#define    br_violet   #825dc0

*background:              bg_0
*foreground:              fg_0
*fading:                  0
*fadeColor:               bg_0
*cursorColor:             fg_1
*pointerColorBackground:  bg_2
*pointerColorForeground:  fg_1

! normal colors: "black", red, green, yellow, blue, magenta, cyan, "white"
*color0:     bg_1
*color1:     red
*color2:     green
*color3:     yellow
*color4:     blue
*color5:     magenta
*color6:     cyan
*color7:     dim_0

! bright/bold versions of colors (in the same order)
*color8:     bg_2
*color9:     br_red
*color10:    br_green
*color11:    br_yellow
*color12:    br_blue
*color13:    br_magenta
*color14:    br_cyan
*color15:    fg_1
